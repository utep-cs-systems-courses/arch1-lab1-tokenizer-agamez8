# list object files
OBJS= tokenizer.o history.o simpleUI.o

CFLAGS=-g -O3 # -g for debug, -O3 for optimization

# default target
all: tokenizer

tokenizer: $(OBJS)
	cc -o tokenizer $(CFLAGS) $(OBJS)

$(OBJS): tokenizer.h history.h

# delete files generated by compiler
clean:
	rm -f *.o tokenizer

run: tokenizer	
	./tokenizer
